  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "launch cdk scripts: bin",
      "cwd": "${workspaceRoot}/test-script/launch-cdk-scripts",
      "program": "${workspaceRoot}/test-script/launch-cdk-scripts/node_modules/.bin/cdk-scripts",
      "args": [
        "ver"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "launch cdk scripts: prepublish",
      "cwd": "${workspaceRoot}/test-script/launch-cdk-scripts",
      "program": "${workspaceRoot}/packages/cdk-scripts/scripts/prepublish.js"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "launch cdk scripts: report",
      "cwd": "${workspaceRoot}/test-script/launch-cdk-scripts",
      "program": "${workspaceRoot}/packages/cdk-scripts/scripts/report.js"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "generate: create-react-cdk",
      "cwd": "${workspaceRoot}/test-gen",
      "program": "${workspaceRoot}/packages/create-react-cdk/index.js",
      "args": [
        "test-create-cdk",
        "--with",
        "user-template",
        "--testing-scripts",
        "${workspaceRoot}/tarballs/cdk-scripts.0.1.1-alpha.2.62.tgz"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "dev: pack.js",
      "program": "${workspaceRoot}/packages/cdk-scripts/.dev/pack.js"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "dev: test-cdk-scripts.js",
      "program": "${workspaceRoot}/scripts/test-cdk-scripts.js"
    }
  ]
}